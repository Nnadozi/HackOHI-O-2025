{
  "expo": {
    "name": "Inchroma",
    "slug": "inchroma",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "inchroma",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.inchroma.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#3E3E3E",
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "monochromeImage": "./assets/images/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.inchroma.app"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 1000,
          "resizeMode": "contain",
          "backgroundColor": "#3E3E3E",
          "dark": {
            "backgroundColor": "#3E3E3E"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Inchroma to access your camera",
          "microphonePermission": "Allow Inchroma to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Inchroma to access your photos"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
